<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="package com.lifereze.tweeps.ui;">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.lifereze.tweeps.ui.MainActivity">
        </activity>
        <activity android:name="com.lifereze.tweeps.ui.SelectedCategoryActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.lifereze.tweeps.ui.MainActivity" />
        </activity>
        <activity
            android:name="com.lifereze.tweeps.ui.SpoilerTweetsActivity"
            android:theme="@style/HomeTheme" />
        <activity android:name="com.lifereze.tweeps.ui.LoginActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.lifereze.tweeps.ui.NewUserActivity"></activity>
    </application>

</manifest>